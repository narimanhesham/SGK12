<% provide(:title, "Add Questions Hints") %>

<div class="container">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="checkpointNumber" class="col-sm-2 control-label text-primary">Checkpoint Number:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="checkpointNumber" placeholder="checkpoint number">
      </div>
    </div>
    <div class="form-group">
      <label for="cityName" class="col-sm-2 control-label text-primary">City Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="cityName" placeholder="city name">
      </div>
    </div>    
    <div class="form-group">
      <label for="hintNumber" class="col-sm-2 control-label text-primary">Hint Number:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="hintNumber" placeholder="hint number">
      </div>
    </div>
    <div class="form-group">
      <label for="latitude" class="col-sm-2 control-label text-primary">Latitude:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="latitude" placeholder="city latitude">
      </div>
    </div>
    <div class="form-group">
      <label for="longitude" class="col-sm-2 control-label text-primary">Longitude:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="longitude" placeholder="city longitude">
      </div>
    </div>
    <div class="form-group">
      <label for="description" class="col-sm-2 control-label text-primary">Hint Content:</label>
      <div class="col-sm-10">
        <textarea class="form-control" rows="3" id="description" placeholder="hint content"></textarea>
      </div>
    </div>             
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" class="btn btn-info" value="Submit">
      </div>
    </div>
  </form>
</div>