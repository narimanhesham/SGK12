<% provide(:home, "active") %>
<% provide(:title, "Home") %>

<div class="container">
  <div class="jumbotron">
    <h1>Welcome to, Serious Games </h1>
    <p><%= lorem_ipsum(300) %></p>
    <p><a class="btn btn-info btn-lg" href="#" role="button">Take a Tour</a></p>
  </div>
</div>

<div class="container bot-padding">
  <div class="well checkbox-well">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <h1>Select Content of the Game</h1>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="checkbox">
          <div class="col-lg-4 col-md-4 col-sm-12">
            <input type="checkbox" id="checkbox1">
            <label for="checkbox1">Unit(1-1): Light</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <input type="checkbox" id="checkbox2">
            <label for="checkbox2">Unit(1-2): Seeing Colored Objects</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <input type="checkbox" id="checkbox3">
            <label for="checkbox3">Unit(1-3): Magnetism</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <input type="checkbox" id="checkbox4">
            <label for="checkbox4">Unit(1-4): Magnetism and Electricity</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">  
            <input type="checkbox" id="checkbox5">
            <label for="checkbox5">Unit(2-1): Mixtures</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">  
            <input type="checkbox" id="checkbox6">
            <label for="checkbox6">Unit(2-2): Solutions</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <input type="checkbox" id="checkbox7">
            <label for="checkbox7">Unit(3-1): Energy Pathway</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <input type="checkbox" id="checkbox8">
            <label for="checkbox8">Unit(3-2): Food Relationships among Living Organisms</label>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <input type="checkbox" id="checkbox9">
            <label for="checkbox9">Unit(3-3): Environmental Balance</label>
          </div>
        </div> <!-- end of checkboxes -->
        <div class="col-lg-12 col-md-12 col-sm-12 text-center checkbox-submit-button">
          <input class="btn btn-info" href="#" type="submit" value="Submit">
        </div>
      </div> <!-- end of form group -->        
    </div> <!-- end of checkboxes row -->
  </div> <!-- end of well -->
</div> <!-- end of container -->


