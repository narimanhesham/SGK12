<% provide(:sign_up, "active") %>
<% provide(:title, "Register") %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <h2 class="register-title">Register</h2>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!-- <div class="alert alert-danger"> -->
          <%= devise_error_messages! %>
        <!-- </div> -->

        <div class="form-group">
          <%= f.label :username, class: "register-labels" %><br />
          <%= f.text_field :username, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "register-labels" %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group register-labels">
          <%= f.label :password, class: "register-labels" %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group register-labels">
          <%= f.label :password_confirmation, class: "register-labels" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


